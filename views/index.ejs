    <% var body = `
    <div class="categories"></div>
            <div class="sushi-container" id="sushiContainer">
                <!-- Суши элементы будут добавлены сюда с помощью JavaScript -->
            </div>
        
        <div class="modal1" id="sushiModal" tabindex="-1" aria-labelledby="sushiModalLabel" aria-hidden="true">
            <div class="modal1-content">
                <span class="close">&times;</span>
                <img src="" alt="Sushi" class="modal-image">
                <div class="text-content">
                    <h2 class="modal1-title"></h2>
                    <p class="modal1-price"></p>
                    <p class="modal1-details"></p>
                </div>
            </div>
        </div>
        
        <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel" aria-hidden="true">
